# ===========================================
# FRONTEND ENVIRONMENT VARIABLES (.env)
# ===========================================

# Supabase Configuration
VITE_SUPABASE_PROJECT_ID="your_supabase_project_id"
VITE_SUPABASE_PUBLISHABLE_KEY="your_supabase_anon_key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# LangChain/AI Backend Configuration
# For development: http://localhost:3001
# For production: https://your-backend-domain.railway.app (or your deployed backend URL)
VITE_LANGCHAIN_API_ENDPOINT="http://localhost:3001"

# ===========================================
# BACKEND ENVIRONMENT VARIABLES (backend/.env)
# ===========================================

# Groq API Key (for LangChain AI features)
# Get your free API key at: https://console.groq.com
GROQ_API_KEY="your_groq_api_key"

# Frontend URL (for CORS)
# For production: https://your-app.vercel.app
FRONTEND_URL="http://localhost:8080"

# Port (Railway will set this automatically)
PORT=3001
